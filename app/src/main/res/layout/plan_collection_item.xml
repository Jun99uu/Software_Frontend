<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/radius"
    android:backgroundTint="@color/light_gray"
    android:paddingBottom="10dp"
    android:elevation="10dp">

    <TextView
        android:id="@+id/plan_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#해쉬태그"
        android:fontFamily="@font/nixgonb"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.05"
        android:padding="12dp"
        android:layout_margin="15dp"
        android:background="@drawable/agree_yes_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@id/plan_tab_title"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_pc_layout"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="2"
            android:background="@drawable/radius"
            android:elevation="10dp"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/first_pc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플랜제목입니…"
                android:textColor="@color/black"
                android:fontFamily="@font/nixgonm"
                android:letterSpacing="-0.05"
                android:textSize="17sp"
                android:padding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/first_pc_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="15days"
                android:fontFamily="@font/nixgonm"
                android:textSize="14sp"
                android:letterSpacing="-0.05"
                android:textColor="@color/tomato"
                app:layout_constraintTop_toBottomOf="@id/first_pc_title"
                app:layout_constraintLeft_toLeftOf="@id/first_pc_title"/>

            <ImageView
                android:id="@+id/down_ic"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_download"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                app:layout_constraintTop_toBottomOf="@id/first_pc_days"
                app:layout_constraintLeft_toLeftOf="@id/first_pc_days"/>

            <TextView
                android:id="@+id/first_pc_downs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/nixgonm"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                app:layout_constraintLeft_toRightOf="@id/down_ic"
                android:layout_marginLeft="1dp"
                app:layout_constraintTop_toTopOf="@id/down_ic"
                app:layout_constraintBottom_toBottomOf="@id/down_ic"/>

            <ImageView
                android:id="@+id/comment_ic"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_comment"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintTop_toBottomOf="@id/first_pc_days"
                app:layout_constraintLeft_toRightOf="@id/first_pc_downs"/>

            <TextView
                android:id="@+id/first_pc_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/nixgonm"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toRightOf="@id/comment_ic"
                app:layout_constraintTop_toTopOf="@id/comment_ic"
                app:layout_constraintBottom_toBottomOf="@id/comment_ic"/>

            <ImageView
                android:id="@+id/like_ic"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_heart"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintTop_toBottomOf="@id/first_pc_days"
                app:layout_constraintLeft_toRightOf="@id/first_pc_comments"/>

            <TextView
                android:id="@+id/first_pc_likess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/nixgonm"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toRightOf="@id/like_ic"
                app:layout_constraintTop_toTopOf="@id/like_ic"
                app:layout_constraintBottom_toBottomOf="@id/like_ic"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_pc_layout"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="2"
            android:background="@drawable/radius"
            android:elevation="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/second_pc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플랜제목입니…"
                android:textColor="@color/black"
                android:fontFamily="@font/nixgonm"
                android:letterSpacing="-0.05"
                android:textSize="17sp"
                android:padding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/second_pc_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="15days"
                android:fontFamily="@font/nixgonm"
                android:textSize="14sp"
                android:letterSpacing="-0.05"
                android:textColor="@color/tomato"
                app:layout_constraintTop_toBottomOf="@id/second_pc_title"
                app:layout_constraintLeft_toLeftOf="@id/second_pc_title"/>

            <ImageView
                android:id="@+id/down_ic2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_download"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                app:layout_constraintTop_toBottomOf="@id/second_pc_days"
                app:layout_constraintLeft_toLeftOf="@id/second_pc_days"/>

            <TextView
                android:id="@+id/second_pc_downs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/nixgonm"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toRightOf="@id/down_ic2"
                app:layout_constraintTop_toTopOf="@id/down_ic2"
                app:layout_constraintBottom_toBottomOf="@id/down_ic2"/>

            <ImageView
                android:id="@+id/comment_ic2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_comment"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintTop_toBottomOf="@id/second_pc_days"
                app:layout_constraintLeft_toRightOf="@id/second_pc_downs"/>

            <TextView
                android:id="@+id/second_pc_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/nixgonm"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toRightOf="@id/comment_ic2"
                app:layout_constraintTop_toTopOf="@id/comment_ic2"
                app:layout_constraintBottom_toBottomOf="@id/comment_ic2"/>

            <ImageView
                android:id="@+id/like_ic2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_heart"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintTop_toBottomOf="@id/second_pc_days"
                app:layout_constraintLeft_toRightOf="@id/second_pc_comments"/>

            <TextView
                android:id="@+id/second_pc_likess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/nixgonm"
                android:textColor="@color/gray"
                android:letterSpacing="-0.05"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toRightOf="@id/like_ic2"
                app:layout_constraintTop_toTopOf="@id/like_ic2"
                app:layout_constraintBottom_toBottomOf="@id/like_ic2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/detail_collection_btn"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/pastel_pink"
            android:elevation="10dp"
            android:text="더보기"
            android:fontFamily="@font/nixgonb"
            android:letterSpacing="-0.05"
            android:textSize="18sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>