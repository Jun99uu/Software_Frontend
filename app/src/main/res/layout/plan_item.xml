<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/makeplan_radius"
    android:padding="7dp"
    android:layout_marginTop="25dp">

    <TextView
        android:id="@+id/plan_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 1"
        android:textSize="25sp"
        android:fontFamily="@font/nixgonb"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/plan_summary"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plan_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/palns_radius"
        android:backgroundTint="@color/pastel_pink"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plan_day_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="20dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/plan_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"/>

        <ToggleButton
            android:id="@+id/plan_toggle"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hamburger"
            android:textOff=""
            android:textOn=""
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/plan_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plan_viewpager"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/exercise_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/plan_delete_btn"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/new_radius"
                android:backgroundTint="@color/gray"
                android:fontFamily="@font/nixgonb"
                android:text="삭제"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/plan_save_btn"
                app:layout_constraintTop_toBottomOf="@id/exercise_list" />

            <Button
                android:id="@+id/plan_save_btn"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/new_radius"
                android:backgroundTint="#E83A14"
                android:fontFamily="@font/nixgonb"
                android:text="저장"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exercise_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>