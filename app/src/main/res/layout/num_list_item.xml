<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/palns_radius"
    android:backgroundTint="@color/white"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1세트"
        android:fontFamily="@font/nixgonb"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:paddingLeft="2dp"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_num"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/select_weight"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/signup_eidt"
            android:hint="중량"
            android:fontFamily="@font/nixgonm"/>

        <TextView
            android:id="@+id/tv_weight"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="KG"
            android:textSize="18sp"
            android:fontFamily="@font/nixgonm"
            android:textColor="@color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/select_hoisu"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/signup_eidt"
            android:hint="횟수"
            android:fontFamily="@font/nixgonm"/>

        <TextView
            android:id="@+id/tv_hoisu"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="회"
            android:textSize="18sp"
            android:fontFamily="@font/nixgonm"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>