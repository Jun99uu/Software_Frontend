<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/upper_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="30dp">

                <Button
                    android:id="@+id/hamburger"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@drawable/dotsmenu"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="헬스장에 가기만 하면\n반은 성공이다!"
                    android:fontFamily="@font/nixgonb"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:letterSpacing="-0.05"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hamburger"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘도 열심히 운동 해야죠!"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nixgonm"
                    android:textSize="20sp"
                    android:letterSpacing="-0.05"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:paddingTop="5dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/upper_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/subtitle"
                    android:paddingTop="20dp">

                    <Button
                        android:id="@+id/first_upper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="#오운완"
                        android:textSize="14sp"
                        android:fontFamily="@font/nixgonm"
                        android:background="@drawable/home_no_select_btn"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/second_upper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="#할수있다"
                        android:textSize="14sp"
                        android:fontFamily="@font/nixgonm"
                        android:background="@drawable/home_no_select_btn"
                        app:layout_constraintLeft_toRightOf="@id/first_upper_btn"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/third_upper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="#가보자고"
                        android:textSize="14sp"
                        android:fontFamily="@font/nixgonm"
                        android:background="@drawable/home_no_select_btn"
                        app:layout_constraintLeft_toRightOf="@id/second_upper_btn"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upper_lay"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="100dp">

                <FrameLayout
                    android:id="@+id/first_down_case"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/routine_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/routine"
                        android:scaleType="fitEnd"
                        android:background="@drawable/radius"
                        android:backgroundTint="@color/pastel_pink"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="데일리\n루틴"
                        android:fontFamily="@font/nixgonb"
                        android:textColor="@color/white"
                        android:letterSpacing="-0.05"
                        android:textSize="32sp"
                        android:paddingTop="20dp"
                        android:paddingLeft="15dp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/second_down_case"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintLeft_toRightOf="@id/first_down_case"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp">

                    <ImageButton
                        android:id="@+id/pt_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ptrain"
                        android:scaleType="fitEnd"
                        android:background="@drawable/radius"
                        android:backgroundTint="@color/patel_yellow"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="루틴\n공유"
                        android:fontFamily="@font/nixgonb"
                        android:textColor="@color/white"
                        android:letterSpacing="-0.05"
                        android:textSize="32sp"
                        android:paddingTop="20dp"
                        android:paddingLeft="15dp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/third_down_case"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toBottomOf="@id/first_down_case"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageButton
                        android:id="@+id/review_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/review"
                        android:scaleType="fitEnd"
                        android:background="@drawable/radius"
                        android:backgroundTint="@color/pastel_blue"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="헬스장\n추천"
                        android:fontFamily="@font/nixgonb"
                        android:textColor="@color/white"
                        android:letterSpacing="-0.05"
                        android:textSize="32sp"
                        android:paddingTop="20dp"
                        android:paddingLeft="15dp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fourth_down_case"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:layout_constraintLeft_toRightOf="@id/third_down_case"
                    app:layout_constraintTop_toBottomOf="@id/second_down_case"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:id="@+id/community_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/community"
                        android:scaleType="fitEnd"
                        android:background="@drawable/radius"
                        android:backgroundTint="@color/pastel_purple"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="커뮤니티"
                        android:fontFamily="@font/nixgonb"
                        android:textColor="@color/white"
                        android:letterSpacing="-0.05"
                        android:textSize="32sp"
                        android:paddingTop="20dp"
                        android:paddingLeft="15dp"/>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>